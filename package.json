{
  "name": "discovery-web-app",
  "version": "0.1.0",
  "author": "DLA Platform Engineers",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "modules/*"
  ],
  "dependencies": {},
  "scripts": {
    "start": "yarn run:core start",
    "build": "yarn run:core build",
    "test": "yarn run:core test",
    "lint": "npm-run-all --continue-on-error --parallel lint:core",
    "lint:core": "yarn run:core lint",
    "run:core": "cd modules/core && yarn",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "eslintConfig": {
    "plugins": [
      "react"
    ],
    "extends": "airbnb",
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "*/*/src/serviceWorker.js"
  ],
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/plugin-transform-react-jsx-source": "^7.2.0",
    "@storybook/addon-actions": "^5.0.0",
    "@storybook/addon-links": "^5.0.0",
    "@storybook/addons": "^5.0.0",
    "@storybook/react": "^5.0.0",
    "eslint-config-airbnb": "17.1.0",
    "husky": "^1.3.1",
    "prettier": "1.16.4",
    "pretty-quick": "^1.10.0"
  }
}
